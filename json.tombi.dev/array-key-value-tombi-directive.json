{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ValueTombiCommentDirective",
  "type": "object",
  "properties": {
    "lint": {
      "anyOf": [
        {
          "$ref": "#/definitions/ValueLintOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ValueLintOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "anyOf": [
            {
              "$ref": "#/definitions/WithKeyRules"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "WithKeyRules": {
      "type": "object",
      "properties": {
        "dotted-keys-out-of-order": {
          "title": "Dotted keys out of order.",
          "description": "Check if dotted keys are defined out of order.\n\n```toml\n# VALID BUT DISCOURAGED\napple.type = \"fruit\"\norange.type = \"fruit\"\napple.skin = \"thin\"\norange.skin = \"thick\"\n\n# RECOMMENDED\napple.type = \"fruit\"\napple.skin = \"thin\"\norange.type = \"fruit\"\norange.skin = \"thick\"\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultWarn"
            },
            {
              "type": "null"
            }
          ]
        },
        "key-empty": {
          "title": "Key empty.",
          "description": "Check if the key is empty.\n\n```toml\n# VALID BUT DISCOURAGED\n\"\" = true\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultWarn"
            },
            {
              "type": "null"
            }
          ]
        },
        "key-required": {
          "description": "Controls the severity level for key required errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "key-not-allowed": {
          "description": "Controls the severity level for key not allowed errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "key-pattern": {
          "description": "Controls the severity level for key pattern errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "array-max-items": {
          "description": "Controls the severity level for max values errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "array-min-items": {
          "description": "Controls the severity level for min values errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "array-unique-items": {
          "description": "Controls the severity level for unique values errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "x-tombi-table-keys-order": "ascending"
    },
    "SeverityLevelDefaultWarn": {
      "default": "warn",
      "allOf": [
        {
          "$ref": "#/definitions/SeverityLevel"
        }
      ]
    },
    "SeverityLevel": {
      "oneOf": [
        {
          "title": "Disable the Rule.",
          "type": "string",
          "const": "off"
        },
        {
          "title": "Display as Warning.",
          "type": "string",
          "const": "warn"
        },
        {
          "title": "Display as Error.",
          "type": "string",
          "const": "error"
        }
      ]
    },
    "SeverityLevelDefaultError": {
      "default": "error",
      "allOf": [
        {
          "$ref": "#/definitions/SeverityLevel"
        }
      ]
    }
  }
}
