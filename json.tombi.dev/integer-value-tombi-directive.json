{
  "$id": "tombi://json.tombi.dev/integer-value-tombi-directive.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "IntegerValueTombiCommentDirective",
  "anyOf": [
    {
      "$ref": "#/definitions/CommonValueTombiCommentDirective"
    },
    {
      "$ref": "#/definitions/IntegerTombiCommentDirective"
    }
  ],
  "definitions": {
    "CommonValueTombiCommentDirective": {
      "description": "Common validation settings for all value types",
      "type": "object",
      "properties": {
        "type-mismatch": {
          "description": "Controls the severity level for type mismatch errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "const-value": {
          "description": "Controls the severity level for const value errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "enumerate": {
          "description": "Controls the severity level for enumerate value errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "SeverityLevelDefaultError": {
      "default": "error",
      "allOf": [
        {
          "$ref": "#/definitions/SeverityLevel"
        }
      ]
    },
    "SeverityLevel": {
      "oneOf": [
        {
          "title": "Disable the Rule.",
          "type": "string",
          "const": "off"
        },
        {
          "title": "Display as Warning.",
          "type": "string",
          "const": "warn"
        },
        {
          "title": "Display as Error.",
          "type": "string",
          "const": "error"
        }
      ]
    },
    "IntegerTombiCommentDirective": {
      "$id": "tombi://json.tombi.dev/integer-tombi-directive.json",
      "type": "object",
      "properties": {
        "maximum-integer": {
          "description": "Controls the severity level for maximum integer errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "minimum-integer": {
          "description": "Controls the severity level for minimum integer errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "exclusive-maximum-integer": {
          "description": "Controls the severity level for exclusive maximum integer errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "exclusive-minimum-integer": {
          "description": "Controls the severity level for exclusive minimum integer errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "multiple-of-integer": {
          "description": "Controls the severity level for multiple of integer errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
