{
  "$id": "tombi://json.tombi.dev/string-key-value-tombi-directive.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StringKeyValueTombiCommentDirective",
  "anyOf": [
    {
      "$ref": "#/definitions/KeyTombiCommentDirective"
    },
    {
      "$ref": "#/definitions/StringTombiCommentDirective"
    }
  ],
  "definitions": {
    "KeyTombiCommentDirective": {
      "$id": "tombi://json.tombi.dev/key-tombi-directive.json",
      "type": "object",
      "properties": {
        "key-required": {
          "description": "Controls the severity level for key required errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "key-not-allowed": {
          "description": "Controls the severity level for key not allowed errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "pattern-property": {
          "description": "Controls the severity level for pattern property errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "SeverityLevelDefaultError": {
      "default": "error",
      "allOf": [
        {
          "$ref": "#/definitions/SeverityLevel"
        }
      ]
    },
    "SeverityLevel": {
      "oneOf": [
        {
          "title": "Disable the Rule.",
          "type": "string",
          "const": "off"
        },
        {
          "title": "Display as Warning.",
          "type": "string",
          "const": "warn"
        },
        {
          "title": "Display as Error.",
          "type": "string",
          "const": "error"
        }
      ]
    },
    "StringTombiCommentDirective": {
      "$id": "tombi://json.tombi.dev/string-tombi-directive.json",
      "type": "object",
      "properties": {
        "maximum-length": {
          "description": "Controls the severity level for maximum length errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "minimum-length": {
          "description": "Controls the severity level for minimum length errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "format": {
          "description": "Controls the severity level for format errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "pattern": {
          "description": "Controls the severity level for pattern errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
