{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ValueTombiCommentDirective",
  "type": "object",
  "properties": {
    "lint": {
      "anyOf": [
        {
          "$ref": "#/definitions/ValueLintOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ValueLintOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "$ref": "#/definitions/StringValueTombiCommentDirectiveRules"
        }
      },
      "additionalProperties": false,
      "required": [
        "rules"
      ]
    },
    "StringValueTombiCommentDirectiveRules": {
      "anyOf": [
        {
          "$ref": "#/definitions/CommonValueTombiCommentDirectiveRules"
        },
        {
          "$ref": "#/definitions/StringTombiCommentDirectiveRules"
        }
      ]
    },
    "CommonValueTombiCommentDirectiveRules": {
      "description": "Common validation settings for all value types",
      "type": "object",
      "properties": {
        "type-mismatch": {
          "description": "Controls the severity level for type mismatch errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "const-value": {
          "description": "Controls the severity level for const value errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "enumerate": {
          "description": "Controls the severity level for enumerate value errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "SeverityLevelDefaultError": {
      "default": "error",
      "allOf": [
        {
          "$ref": "#/definitions/SeverityLevel"
        }
      ]
    },
    "SeverityLevel": {
      "oneOf": [
        {
          "title": "Disable the Rule.",
          "type": "string",
          "const": "off"
        },
        {
          "title": "Display as Warning.",
          "type": "string",
          "const": "warn"
        },
        {
          "title": "Display as Error.",
          "type": "string",
          "const": "error"
        }
      ]
    },
    "StringTombiCommentDirectiveRules": {
      "type": "object",
      "properties": {
        "maximum-length": {
          "description": "Controls the severity level for maximum length errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "minimum-length": {
          "description": "Controls the severity level for minimum length errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "format": {
          "description": "Controls the severity level for format errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "pattern": {
          "description": "Controls the severity level for pattern errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
