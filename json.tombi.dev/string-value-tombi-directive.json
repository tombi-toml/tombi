{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ValueTombiCommentDirective",
  "type": "object",
  "properties": {
    "lint": {
      "anyOf": [
        {
          "$ref": "#/definitions/ValueLintOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "ValueLintOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "anyOf": [
            {
              "$ref": "#/definitions/WithCommonRules"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "WithCommonRules": {
      "type": "object",
      "properties": {
        "type-mismatch": {
          "description": "Controls the severity level for type mismatch errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "const-value": {
          "description": "Controls the severity level for const value errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "enumerate": {
          "description": "Controls the severity level for enumerate value errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "deprecated": {
          "description": "Controls the severity level for deprecated value errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultWarn"
            },
            {
              "type": "null"
            }
          ]
        },
        "string-max-length": {
          "description": "Controls the severity level for maximum length errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "string-min-length": {
          "description": "Controls the severity level for minimum length errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "string-format": {
          "description": "Controls the severity level for format errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        },
        "string-pattern": {
          "description": "Controls the severity level for pattern errors",
          "anyOf": [
            {
              "$ref": "#/definitions/SeverityLevelDefaultError"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "x-tombi-table-keys-order": "ascending"
    },
    "SeverityLevelDefaultError": {
      "default": "error",
      "allOf": [
        {
          "$ref": "#/definitions/SeverityLevel"
        }
      ]
    },
    "SeverityLevel": {
      "oneOf": [
        {
          "title": "Disable the Rule.",
          "type": "string",
          "const": "off"
        },
        {
          "title": "Display as Warning.",
          "type": "string",
          "const": "warn"
        },
        {
          "title": "Display as Error.",
          "type": "string",
          "const": "error"
        }
      ]
    },
    "SeverityLevelDefaultWarn": {
      "default": "warn",
      "allOf": [
        {
          "$ref": "#/definitions/SeverityLevel"
        }
      ]
    }
  }
}
