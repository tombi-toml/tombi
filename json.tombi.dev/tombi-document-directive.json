{
  "$id": "tombi://json.tombi.dev/tombi-document-directive.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TombiDocumentDirectiveContent",
  "type": "object",
  "properties": {
    "toml-version": {
      "title": "TOML version",
      "description": "This directive specifies the TOML version of this document, with the highest priority.",
      "anyOf": [
        {
          "$ref": "#/definitions/TomlVersion"
        },
        {
          "type": "null"
        }
      ],
      "default": "v1.0.0"
    },
    "format": {
      "title": "Formatter options",
      "anyOf": [
        {
          "$ref": "#/definitions/FormatOptions"
        },
        {
          "type": "null"
        }
      ]
    },
    "lint": {
      "title": "Linter options",
      "anyOf": [
        {
          "$ref": "#/definitions/LintOptions"
        },
        {
          "type": "null"
        }
      ]
    },
    "schema": {
      "title": "Schema options",
      "anyOf": [
        {
          "$ref": "#/definitions/SchemaOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "TomlVersion": {
      "title": "TOML version",
      "type": "string",
      "enum": [
        "v1.0.0",
        "v1.1.0-preview"
      ]
    },
    "FormatOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Format disabled",
          "description": "If `true`, formatting is disabled for this document.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        },
        "disable": {
          "title": "Format disabled",
          "description": "**ðŸš§ Deprecated ðŸš§**\\\nPlease use `format.disabled` instead.",
          "type": [
            "boolean",
            "null"
          ],
          "deprecated": true,
          "default": false
        }
      },
      "additionalProperties": false
    },
    "LintOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Lint disabled",
          "description": "If `true`, linting is disabled for this document.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        },
        "disable": {
          "title": "Lint disabled",
          "description": "**ðŸš§ Deprecated ðŸš§**\\\nPlease use `lint.disabled` instead.",
