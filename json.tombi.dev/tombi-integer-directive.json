{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TombiValueDirectiveContent",
  "type": "object",
  "properties": {
    "lint": {
      "title": "Linter options",
      "anyOf": [
        {
          "$ref": "#/definitions/LintOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "LintOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "title": "Lint rules",
          "anyOf": [
            {
              "$ref": "#/definitions/WithCommonRules"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "WithCommonRules": {
      "type": "object",
      "properties": {
        "type-mismatch": {
          "title": "Type mismatch",
          "description": "Check if the value is of the correct type.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "const-value": {
          "title": "Const value",
          "description": "Check if the value is equal to the const value.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "enumerate": {
          "title": "Enumerate",
          "description": "Check if the value is one of the values in the enumerate.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "deprecated": {
          "title": "Deprecated",
          "description": "Check if the value is deprecated.",
          "anyOf": [
            {
              "$ref": "#/definitions/WarnRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "integer-maximum": {
          "title": "Maximum integer",
          "description": "Check if the integer is less than or equal to the maximum.\n\n```rust\ninteger <= maximum\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "integer-minimum": {
          "title": "Minimum integer",
          "description": "Check if the integer is greater than or equal to the minimum.\n\n```rust\ninteger >= minimum\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "integer-exclusive-maximum": {
          "title": "Exclusive maximum integer",
          "description": "Check if the integer is less than the maximum.\n\n```rust\ninteger < maximum\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "integer-exclusive-minimum": {
          "title": "Exclusive minimum integer",
          "description": "Check if the integer is greater than the minimum.\n\n```rust\ninteger > minimum\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "integer-multiple-of": {
          "title": "Multiple of integer",
          "description": "Check if the integer is a multiple of the value.\n\n```rust\ninteger % multiple_of == 0\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "x-tombi-table-keys-order": "ascending"
    },
    "ErrorRuleOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Error rule disabled",
          "description": "If `true`, Error is disabled for this value.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        }
      },
      "additionalProperties": false
    },
    "WarnRuleOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Warn rule disabled",
          "description": "If `true`, Warn is disabled for this value.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        }
      },
      "additionalProperties": false
    }
  }
}
