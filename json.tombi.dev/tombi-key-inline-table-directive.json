{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TombiValueDirectiveContent",
  "type": "object",
  "properties": {
    "format": {
      "title": "Formatter options",
      "anyOf": [
        {
          "$ref": "#/definitions/FormatOptions"
        },
        {
          "type": "null"
        }
      ]
    },
    "lint": {
      "title": "Linter options",
      "anyOf": [
        {
          "$ref": "#/definitions/LintOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "FormatOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "title": "Format rules",
          "anyOf": [
            {
              "$ref": "#/definitions/WithKeyFormatRules"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "WithKeyFormatRules": {
      "type": "object",
      "properties": {
        "table-keys-order": {
          "title": "Table keys order",
          "description": "Control the sorting method of the table by keys.",
          "anyOf": [
            {
              "$ref": "#/definitions/SortOptions"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "x-tombi-table-keys-order": "ascending"
    },
    "SortOptions": {
      "anyOf": [
        {
          "$ref": "#/definitions/SortMethod"
        },
        {
          "$ref": "#/definitions/SortDisabledOptions"
        }
      ]
    },
    "SortMethod": {
      "type": "string",
      "enum": [
        "ascending",
        "descending",
        "version-sort"
      ]
    },
    "SortDisabledOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Sort disabled",
          "description": "If `true`, Sort is disabled for this value.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        }
      },
      "additionalProperties": false
    },
    "LintOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "title": "Lint rules",
          "anyOf": [
            {
              "$ref": "#/definitions/WithKeyLintRules"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "WithKeyLintRules": {
      "type": "object",
      "properties": {
        "key-empty": {
          "title": "Key empty",
          "description": "Check if the key is empty.\n\n```toml\n# VALID BUT DISCOURAGED\n\"\" = true\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/WarnRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "key-not-allowed": {
          "title": "Key not allowed",
          "description": "Check if the key is not defined in this Table.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "key-pattern": {
          "title": "Key pattern",
          "description": "Check if the key matches the pattern in the Schema.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "type-mismatch": {
          "title": "Type mismatch",
          "description": "Check if the value is of the correct type.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "const-value": {
          "title": "Const value",
          "description": "Check if the value is equal to the const value.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "enumerate": {
          "title": "Enumerate",
          "description": "Check if the value is one of the values in the enumerate.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "deprecated": {
          "title": "Deprecated",
          "description": "Check if the value is deprecated.",
          "anyOf": [
            {
              "$ref": "#/definitions/WarnRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "dotted-keys-out-of-order": {
          "title": "Dotted keys out of order",
          "description": "Check if dotted keys are defined out of order.\n\n```toml\n# VALID BUT DISCOURAGED\napple.type = \"fruit\"\norange.type = \"fruit\"\napple.skin = \"thin\"\norange.skin = \"thick\"\n\n# RECOMMENDED\napple.type = \"fruit\"\napple.skin = \"thin\"\norange.type = \"fruit\"\norange.skin = \"thick\"\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/WarnRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "table-max-keys": {
          "title": "Max keys",
          "description": "Check if the table has more than the maximum number of keys.\n\n```rust\nlength(table) <= maximum\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "table-min-keys": {
          "title": "Min keys",
          "description": "Check if the table has less than the minimum number of keys.\n\n```rust\nlength(table) >= minimum\n```",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "table-key-required": {
          "title": "Key required",
          "description": "Check if the key is required in this Table.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "x-tombi-table-keys-order": "ascending"
    },
    "WarnRuleOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Warn rule disabled",
          "description": "If `true`, Warn is disabled for this value.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        }
      },
      "additionalProperties": false
    },
    "ErrorRuleOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Error rule disabled",
          "description": "If `true`, Error is disabled for this value.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        }
      },
      "additionalProperties": false
    }
  }
}
