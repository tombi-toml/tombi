{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TombiValueDirectiveContent",
  "type": "object",
  "properties": {
    "format": {
      "title": "Formatter options",
      "anyOf": [
        {
          "$ref": "#/definitions/FormatOptions"
        },
        {
          "type": "null"
        }
      ]
    },
    "lint": {
      "title": "Linter options",
      "anyOf": [
        {
          "$ref": "#/definitions/LintOptions"
        },
        {
          "type": "null"
        }
      ]
    }
  },
  "additionalProperties": false,
  "definitions": {
    "FormatOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "title": "Format rules",
          "anyOf": [
            {
              "$ref": "#/definitions/WithCommonFormatRules"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "WithCommonFormatRules": {
      "type": "object",
      "additionalProperties": false,
      "x-tombi-table-keys-order": "ascending"
    },
    "LintOptions": {
      "type": "object",
      "properties": {
        "rules": {
          "title": "Lint rules",
          "anyOf": [
            {
              "$ref": "#/definitions/WithCommonLintRules"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "WithCommonLintRules": {
      "type": "object",
      "properties": {
        "type-mismatch": {
          "title": "Type mismatch",
          "description": "Check if the value is of the correct type.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "const-value": {
          "title": "Const value",
          "description": "Check if the value is equal to the const value.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "enumerate": {
          "title": "Enumerate",
          "description": "Check if the value is one of the values in the enumerate.",
          "anyOf": [
            {
              "$ref": "#/definitions/ErrorRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        },
        "deprecated": {
          "title": "Deprecated",
          "description": "Check if the value is deprecated.",
          "anyOf": [
            {
              "$ref": "#/definitions/WarnRuleOptions"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "additionalProperties": false,
      "x-tombi-table-keys-order": "ascending"
    },
    "ErrorRuleOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Error rule disabled",
          "description": "If `true`, Error is disabled for this value.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        }
      },
      "additionalProperties": false
    },
    "WarnRuleOptions": {
      "type": "object",
      "properties": {
        "disabled": {
          "title": "Warn rule disabled",
          "description": "If `true`, Warn is disabled for this value.",
          "type": [
            "boolean",
            "null"
          ],
          "enum": [
            true
          ],
          "default": false
        }
      },
      "additionalProperties": false
    }
  }
}
